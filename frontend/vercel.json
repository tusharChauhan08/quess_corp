{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "^/api(/.*)?$",
      "dest": "/api$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "continue": true
    },
    {
      "src": "/(.*\\.(js|css|map|ico|png|jpg|svg))",
      "dest": "/$1"
    }
  ]
}

